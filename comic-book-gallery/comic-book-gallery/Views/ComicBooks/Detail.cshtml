@{
    Layout = null;

    var seriesTitle = "Outsiders";
    var issueNumber = 101;
    var description = "<p>Final Issue of Outsiders for sale now!</p>";
    var artists = new string[]
    {
        "Writing: Smart Guy 1",
        "Writing: Smart Guy 2",
        "Cover: Smart Guy 3"
    };

}

<html>

<head>

    <title></title>
</head>

<body>
    <div>
        <h1>@seriesTitle</h1>
        <h2>Issue #@issueNumber</h2>

        <h5>Description:</h5>
        <div>@Html.Raw(description)</div>

        @if (artists.Length > 0)
        {
            <h5>Artists:</h5>
            <div>
                <ul>
                    @foreach (var artist in artists)
                    {
                        <li>@artist</li>
                    }
                </ul>
            </div>
        }

    </div>


</body>


</html>